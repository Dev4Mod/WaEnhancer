<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Handle -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:background="@drawable/drag_handle_bg" />

    <!-- Avatar and Titles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bsAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:background="?attr/colorSurfaceContainerHigh"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:srcCompat="@drawable/ic_github" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/bsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                tools:text="John Doe" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/bsUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="\@johndoe" />
        </LinearLayout>
    </LinearLayout>

    <!-- Shimmer Layout (Shown while loading) -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/bsShimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fake Location -->
            <View
                android:layout_width="140dp"
                android:layout_height="16dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Fake Bio -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="8dp" />
            <View
                android:layout_width="200dp"
                android:layout_height="16dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp" />

            <!-- Fake Buttons -->
            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#E0E0E0" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Content Layout (Hidden while loading) -->
    <LinearLayout
        android:id="@+id/bsContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Details Row (Location, Followers) -->
        <LinearLayout
            android:id="@+id/bsLocationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/bsLocationIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location_pin"
                app:tint="?attr/colorOnSurfaceVariant" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/bsLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="San Francisco, CA" />
                
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/bsFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="• 1.2k followers" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/bsContributions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="• 32 commits" />
        </LinearLayout>

        <!-- Bio -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bsBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"
            tools:text="Software Engineer interested in open source and Android development."
            tools:visibility="visible" />

        <!-- Chips Row -->
        <HorizontalScrollView
            android:id="@+id/bsChipsScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHireable"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Open to hire"
                    android:visibility="gone"
                    app:chipIcon="@drawable/ic_round_check_circle_24"
                    tools:visibility="visible" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTwitter"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Twitter"
                    android:visibility="gone"
                    app:chipIcon="@drawable/ic_twitter"
                    tools:visibility="visible" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bsGithubBtn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:paddingStart="24dp"
            android:textAlignment="textStart"
            android:text="View GitHub Profile"
            app:icon="@drawable/ic_github"
            app:iconGravity="textStart" />
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bsWebsiteBtn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:paddingStart="24dp"
            android:textAlignment="textStart"
            android:text="Visit Website"
            android:visibility="gone"
            tools:visibility="visible"
            app:icon="@drawable/ic_language"
            app:iconGravity="textStart" />
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bsContributionsBtn"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:paddingStart="24dp"
            android:textAlignment="textStart"
            android:text="View Detailed Contributions"
            android:visibility="gone"
            tools:visibility="visible"
            app:icon="@drawable/ic_round_check_circle_24"
            app:iconGravity="textStart" />

    </LinearLayout>

</LinearLayout>
